<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:padding="1dp"

              android:baselineAligned="false" android:background="@color/backColorMain">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Создать..."
                android:id="@+id/textView" android:layout_gravity="left|center_horizontal"
                android:paddingBottom="6dp"
                android:paddingRight="170dp" android:textStyle="bold"
                android:singleLine="false" android:paddingLeft="10dp" android:textSize="20dp"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
            android:background="@color/backColor" android:padding="15dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Имя:"
                android:id="@+id/textView2" style="@style/textStyle"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_name" android:textStyle="bold"
                android:inputType="textPersonName"
                android:textColor="@color/textColor"
                android:maxLength="20" android:singleLine="true"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/bt_new_file"
                    android:textStyle="bold"
                    android:layout_weight="1" android:background="@color/backColor"
                    android:textColor="@color/textColor" android:paddingBottom="10dp"
                    android:paddingTop="5dp" android:textSize="20dp"/>

            <Button

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Отмена"
                    android:id="@+id/bt_cancel_new" android:layout_weight="1" android:textStyle="bold"
                    android:focusable="true" android:background="@color/backColor"
                    android:textSize="20dp" android:paddingTop="5dp" android:paddingBottom="10dp"
                    android:textColor="@color/textColor"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>